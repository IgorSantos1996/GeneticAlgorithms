@model Models.Horario

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>
<h4>Horario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Disciplina" class="control-label"></label>
                <select id="iddisciplina" asp-for="IdDisciplina" asp-items="(SelectList)ViewBag.AllDisciplina" class="form-control"></select>
                <span asp-validation-for="IdDisciplina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <select id="idano" asp-for="IdAno" asp-items="(SelectList)ViewBag.AllAno" class="form-control"></select>
                <span asp-validation-for="IdAno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}